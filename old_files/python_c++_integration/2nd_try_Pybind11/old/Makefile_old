# execute 'make' to compile the example.cpp file
# execute 'make clean' to remove the compiled file

# location of the Python header files
PYTHON2_INCLUDE = `python-config --cflags --ldflags`
PYTHON3_INCLUDE = `python3-config --cflags --ldflags`
 
# location of the Pybind include files and library
PYBIND_INC = ./include
BOOST_LIB = /usr/lib
 
# compile mesh classes
TARGET = example
 
default:
	c++ -O3 -shared -std=c++11 -I $(PYBIND_INC) $(PYTHON3_INCLUDE) $(TARGET).cpp -o $(TARGET).so -fPIC

clean:
	rm example.so
